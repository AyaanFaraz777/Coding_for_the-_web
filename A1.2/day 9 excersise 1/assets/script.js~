function outboxSize(){
document.getElementById("Intro3").style.width = document.getElementById("outbox").value + "px";
function range(start, end) {
    var ans = [];
    for (let i = start; i <= end; i++) {
        ans.push(i);
    }
    return ans;
   }
 }