const box1 = document.getElementById("box1");function displaybox1(){	if(box1.className=="closed"){		box1.className="open";	}	else{	box1.className="closed";	}}const box2 = document.getElementById("box2");const button2=document.getElementById("button2");function displaybox2(){	if(box2.className=="closed"){		box2.className="open";	}	else{	box2.className="closed";	}}button2.addEventListener("click", displaybox2);const closebox = document.getElementsByClassName("closebox");var i;for (i=0; i<closebox.length; i++){	closebox[i].addEventListener("click", function() {		this.parentElement.className="closed";		}});